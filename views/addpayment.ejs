<!-- addpayment.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Payment" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Payment</h2>
        <form action="/addPayment" method="POST">
          <label>Amount:</label
          ><input type="number" value="" id="amount" name="amount" required />

          <label for="method">Method:</label>
          <textarea
            value=""
            id="method"
            name="method"
            rows="4"
            required
          ></textarea
          ><br />

          <label for="status">Status:</label>
          <input type="text" id="status" name="status" required /><br />

          <label>Author:</label>
          <select>
            <option value="sami">Lakshmi</option>
            <option value="rami">Bhavani</option></select
          ><br />

          <label for="achieved">Achieved:</label>
          <input type="checkbox" id="achieved" name="achieved" /><br />

          <button type="submit">Add Payment</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
